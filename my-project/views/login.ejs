<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>登录页面</title>
	<link rel="stylesheet" href="/stylesheets/style.css" />
	<script src="/js/jquery.min.js"></script>
	<style type="text/css">
		body,html {
		  height: 100%;
		  overflow: hidden;
		}
	</style>
</head>
<body style="height: 100%;padding: 0;">
	<div  class="login-frm" id="frm">
		<div class="login-hd">
			<img src="/imgs/logo.png" alt="" />
		</div>
		<div class="content-wrap">
			<div class="content-logo">
				<img src="/imgs/login-logo.png" alt="" />
			</div>
			<div class="content">
				<div class="login-panel">
					<div class="username controls">
						<i class="iconfont">&#xe697;</i>
						<input type="text" placeholder="用户名" id="username" />
					</div>
					<div class="controls">
						<i class="iconfont">&#xe6e6;</i>
						<input type="password" placeholder="密码" id="pwd" />
					</div>
					<div class="controls">
						<i class="iconfont">&#xe624;</i>
						<input type="text" placeholder="验证码" />
						<div style="position: absolute;right: 8px;top: 6px;cursor: pointer;">
							<img src="/imgs/index.png" title="换一张" />
						</div>
					</div>
					<div class="login-btn">
						<input type="button" value="登录" onclick="userlogin()" />
					</div>
					<div class="save-infor">
						<div class="login-infor">
							<input type="checkbox" name="remeber"/>
							<label for="remeber">保存登录信息</label>
						</div>
						<a href="#">忘记密码？</a>
						<a href="#">去店铺首页>></a>
					</div>
				</div>
			</div>
		</div>
	</div>
</body>
<script>
	function userlogin(){
		$.ajax({
			url : "/api/login",
			type : "post",
			data : {
				username : $("#username").val(),
				pwd : $("#pwd").val()
			},
			success : function(res){
                if(res.status==1){
	                location.href="http://localhost:8080/index#";
                }else{
                    console.log(res.message);
                }
			}
		})
	}
</script>
</html>