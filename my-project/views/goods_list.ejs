<script type="text/javascript">
	window.onload=function(){
		$("#goods_num").html( $("#tabList").find("tr").length-1 );
		var sum_page=Math.ceil( parseInt( $("#goods_num").html() )/parseInt( $("#pageSize").val() ) );
		$("#page_num").html(sum_page);
	}
	//委托实现为每一个td添加一个onclick事件
	$("#tabList").delegate("span","click",function(){
		var txt = $("<input type='text' style='width:50px'/>");
		var con = $(this).html()
		txt.val( con );
		$(this).html("");
		$(this).append(txt);
		txt.focus();
		var target = $(this);
		txt.blur(function(){
			if(txt.val()==""){
				target.html( con );
			}else{
				target.html( txt.val() );
			}
		})
	})
	//回收站
	$(".del_goods").click(function(){
		if(confirm("确定要删除此商品么")){
			$(this).parent().parent().remove();
		}
	})
</script>
