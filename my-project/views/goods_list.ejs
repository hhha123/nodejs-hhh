    </div>
</body>
<script type="text/javascript">
	//委托实现为每一个span添加一个onclick事件
	$("#tabList").delegate("span","click",function(){
		var txt = $("<input type='text' style='width:50px'/>");
		var con = $(this).html()
		txt.val( con );
		$(this).html("");
		$(this).append(txt);
		txt.focus();
		var target = $(this);
		txt.blur(function(){
			if(txt.val()==""){
				target.html( con );
			}else{
				target.html( txt.val() );
			}
		})
	})
	//回收站
