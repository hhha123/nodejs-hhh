		 $.ajax({
		 	   url : "/api/goods_del",
	           type : "get",
	           data : {
	           	  gid : gid
	           },
	           success : function(res){
	              console.log(res);
	              if(res.status == 1){
	              	  location.reload(true);
	              }else{
	              	alert(res.message);
	              }
	           }
			 })
		}
</script>
</html>